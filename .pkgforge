name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-49',
    checksum: '21cda7eb2d1ed2d5d239e5384b6f410ab6cb591f40f8013104a2b81c2adf48fd'
  },
  'linux-api-headers': {
    version: '4.20-1',
    checksum: 'aed037b2b3fb2df77ca19359a20188d39c25d011febf4d3733d251fa87ca9636'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end

test do
  # TODO: add tests
end

name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-36',
    checksum: 'e161fc1a8d39156c1bd175d382991bfe2da4d6fe7315331b94a4bda1a97e4af4'
  },
  'linux-api-headers': {
    version: '4.15-2',
    checksum: 'dbfe68e7620b09fe2996d83fe4ae738dddb2486885b9d5ef3dc27ae77d7585ba'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end

test do
  # TODO: add tests
end

name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-44',
    checksum: '3bf796352a7697599c56bbb7e475d560df893ae5555d5bfc4316b3550cec76e7'
  },
  'linux-api-headers': {
    version: '4.18-1',
    checksum: 'edc8dab0e57cb3868867a86d501eb5f314ad00d87e50957c3ffae113ce967298'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end

test do
  # TODO: add tests
end

name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-31',
    checksum: '54acfbca512e68b519712588532f993cea0669a5f0957ccfeb9810a4200ad823'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end


name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-47',
    checksum: '8756e2e0b2634bcad1533c44e645f155cd47f53ed68de4dcf19a10b6406030eb'
  },
  'linux-api-headers': {
    version: '4.19-1',
    checksum: 'de68cab17c2354ee660b269ccca30e275a9314563ebdfb4f427fc5ebe1395f30'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end

test do
  # TODO: add tests
end

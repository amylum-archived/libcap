name 'libcap'
org 'amylum'

licenses 'License'

deps(
  pam: {
    version: '1.3.0-32',
    checksum: 'd0ed9783eb189bc34286596b6503c2982ac35145159452dd25131b40f45d312a'
  },
  'linux-api-headers': {
    version: '4.13-1',
    checksum: '50b2288419fe132c061bdf3d297293011929abc1092ffaa5e523ad6549b4f5fa'
  }
)

cflags
harden

build do
  run 'sed -i "/SBINDIR/s#sbin#bin#" Make.Rules'
  run "make CC=musl-gcc CFLAGS='#{@forge.cflags.join(' ')}'"
  install 'prefix' => '/usr', 'lib' => '/lib'
end

